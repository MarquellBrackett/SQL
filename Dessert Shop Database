SELECT * FROM sweet_desserts ORDER BY price;
SELECT AVG(price) FROM sweet_desserts;
SELECT AVG(lifespan) FROM sweet_desserts;


--display the database ordered by price
SELECT * FROM sweet_desserts
ORDER BY price

--display the average lifespan of products
SELECT AVG(lifespan)
FROM sweet_desserts

--display average price of products
SELECT AVG(price)
FROM sweet_desserts


